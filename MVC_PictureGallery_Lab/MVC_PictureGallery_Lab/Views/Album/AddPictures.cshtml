@model MVC_PictureGallery_Lab.Models.AlbumViewModel
<link href="~/Style/Spinner.css" rel="stylesheet" />

@using (Html.BeginForm("AddPictures", "Album", FormMethod.Post, new { id = "PictureForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AlbumViewModel</h4>
        <hr />

        @Html.HiddenFor(model => model.Id)

        <div class="preview img-wrapper" id="imgHolder"></div>
        <div class="file-upload-wrapper">
            <input type="file" id="file" name="file" class="file-upload-native" accept="image/*" />
            <input type="text" disabled placeholder="upload image" class="file-upload-text" />
            @Html.ValidationMessage("error")
        </div>
        <div class="talign-center">
            <div id="Spinner">
                <div class="spinner icon-spinner-3" aria-hidden="true"></div>
            </div>
            <script type="text/javascript">
                $('#Spinner').hide()
            </script>

        </div>
       
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" id="submitBtn" class="btn btn-default" />
                </div>
            </div>
        
    </div>

}
<div id="result"></div>
<script src="~/JavaScripts/CreatePicture.js"></script>


