@model MVC_PictureGallery_Lab.Models.AlbumViewModel
@{
    var options = new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = Model.Id.ToString()
    };
}
<div id="@Model.Id">
    @using (Ajax.BeginForm("SaveEdit", options))
    {
        @Html.HiddenFor(x => x.Id);
        {
            @Html.AntiForgeryToken()
            <div class="col-xs-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { id = "txtbox", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-2">
                @Html.EnumDropDownListFor(model => model.Topic, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Topic, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-2">32</div>
            <div class="col-xs-3">
                <div class="col-xs-2"><input type="submit" value="Save" class="btn btn-default" /></div>
            </div>

        }
    }
</div>