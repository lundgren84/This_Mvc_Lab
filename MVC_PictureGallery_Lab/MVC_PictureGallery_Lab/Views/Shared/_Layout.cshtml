<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/JavaScripts/Growl/jquery.growl.js"></script>
    <link href="~/JavaScripts/Growl/jquery.growl.css" rel="stylesheet" />
    <script src="~/JavaScripts/Main.js"></script>
    <link href="~/Style/Main.css" rel="stylesheet" />

    <script src="~/Style/ImgPresentation/ImgPresentation_JS.js"></script>
    <link href="~/Style/ImgPresentation/ImgPresentation_CSS.css" rel="stylesheet" />

    @* Picture Upload *@
    <link href="~/Style/PictureUpload.css" rel="stylesheet" />
    <script src="~/JavaScripts/PictureUpload.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Albums", "Index", "Album", new { area = "" }, new { @class = "navbar-brand" })
              
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">      
                    <li>@Html.ActionLink("Open-Gallery", "Index", "Gallery")</li>
                </ul>
                @Html.Partial("_PartialLogin")
            </div>
        </div>
    </div>
    <div>
        @Html.Partial("Chat")
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

</body>
</html>
