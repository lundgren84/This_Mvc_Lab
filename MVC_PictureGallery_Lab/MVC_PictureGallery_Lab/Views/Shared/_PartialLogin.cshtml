
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })

            </li>
           <li>@Html.ActionLink("Logout", "Logout","Authentication")</li>
        </ul>
    }
}
else{ 
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Register", "Register", "Authentication", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink("Login", "Login", "Authentication", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>

}
   


  



